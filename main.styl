@import url('http://fonts.googleapis.com/css?family=Roboto+Slab:400,700')

global-reset()
reset-html5()

// Defaults
font-main = Roboto Slab, sans-serif

body
	background: #eee
	color: #333
	font: 14px/1.5 font-main
	text-shadow: 0 1px 0 rgba(#fff, .5)

a
	color: #555
	transition: all .1s linear
	&:hover
		color: #333 !important

#contents
	background: rgba(#fff, .5)
	margin: 20px
	padding: 20px
	text-align: center

#argument
	font-size: 24px
	font-weight: bold
	margin: 30px 0
	&.loading
		color: #999
		font-weight: normal

.controls
	margin: 20px 0
	display: block
	button
		background: linear-gradient(top, #fff, #eee)
		border: 1px solid
		border-color: #ddd #ccc #ccc #ddd
		border-radius: 5px
		cursor: pointer
		font: 16px/1.5 font-main
		outline: none
		padding: 15px 50px
		margin: 0 10px
		transition: all .1s linear
		&:active
			background: linear-gradient(top, #ddd, #eee)
			border-color: #aaa #ccc #ccc #aaa
		&:hover
			opacity: 1 !important
		&.tumblrize-grammar
			padding: 10px 30px
			opacity: .4


#footer
	padding: 10px 0 0 0
	text-align: center
	a
		color: #aaa
