@import url('http://fonts.googleapis.com/css?family=Roboto+Slab:400,700')

global-reset()
reset-html5()

// Defaults
font-main = Roboto Slab, sans-serif

body
	background: #eee
	background-size: cover !important
	color: #333
	font: 16px/1.5 font-main
	text-shadow: 0 1px 0 rgba(#fff, .7)

a
	color: #555
	transition: all .1s linear
	&:hover
		color: #333 !important

strong
	font-weight: bold

#insult
	display: none
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	background: #eee
	font-size: 34px
	font-weight: bold
	p
		display: block
		text-align: center
		position: absolute
		margin: 30px 0 0 0 // half of the header height
		top: 50%
		left: 50%
		transform: translate(-50%, -50%)

#controls
	background: linear-gradient(top, rgba(#333, .9), rgba(#000, .9))
	border-bottom: 1px solid #000
	color: #fff
	text-shadow: 0 1px 1px rgba(#000, .8)
	display: block
	text-align: center
	box-shadow: 0 5px 10px rgba(#000, .3)
	position: fixed
	top: 0
	left: 0
	width: 100%
	z-index: 10
	height: 60px
	line-height: 60px
	font-weight: bold
	span
		&:after
			margin: 0 10px
			content: '▶▶▶'
	button
		border: 1px solid
		color = #b32
		background: linear-gradient(top, color, darken(color, 15))
		border-color: lighten(color, 5) darken(color, 25) darken(color, 25) lighten(color, 5)
		border-radius: 5px
		cursor: pointer
		font: bold 16px/1.5 font-main
		outline: none
		padding: 8px 40px
		margin: 0 10px
		color: #fff
		text-shadow: 0 1px 0 rgba(#000, .8)
		box-shadow: 0 3px 8px rgba(#000, .5)
		&:hover
			background: linear-gradient(top, lighten(color, 15), color)
			border-color: lighten(color, 20) darken(color, 5) darken(color, 5) lighten(color, 20)
			opacity: 1 !important
		&:active
			background: linear-gradient(top, color, lighten(color, 15))
			border-color: darken(color, 5) lighten(color, 20) lighten(color, 20) darken(color, 5)

#footer
	margin: 10px 0
	text-align: center
	color: rgba(#000, .6)

#forkme
	position: fixed
	top: 0
	right: 0
	z-index: 20
